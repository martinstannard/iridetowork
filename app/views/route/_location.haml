%span.location
  - remote_form_for :location, location, :url => {:controller => 'location', :action => 'save'}, :update => location.id, :complete => "location.href = location.href;" do |f|
    %fieldset
      = error_messages_for 'location'
      %p
        = f.text_field :query, :size => 30, :maxlength => 60
        = f.hidden_field :id
        - fields_for :route do |r|
          = r.hidden_field :id, :value => params[:id]
        = f.submit

= location.full_address
= location.precision
= location.provider