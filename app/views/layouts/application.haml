!!! Strict
%html{:xmlns =>'http://www.w3.org/1999/xhtml', "xmlns:v"=>"urn:schemas-microsoft-com:vml", 'xml:lang' => 'en', :lang => 'en'}

  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %title= "iRideToWork - : #{yield(:title) || 'iRideToWork'}"
    = stylesheet_link_tag "application.css"
    %script{:type=>"text/javascript", :src=>"http://www.google.com/jsapi?key=#{GeoKit::Geocoders::google}"}
    = javascript_include_tag :defaults
  %body{:id => @section,  :onunload=>"GUnload()"}
    #frame
      #header
        %a{:href => "/"}
          %img{:src => '/images/iridetowork.png', :alt => 'iRideToWork - you should too.', :height => '100px' }/
        %span#h1 I Ride To Work
      #contentleft
        = link_to 'Sign Up', new_rider_path
      = yield
  #footer
