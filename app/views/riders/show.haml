- from = @from
- to = @to
- mid = @from.midpoint_to @to
.rider
  = @rider.login 
%span.rider{:id => "from"}
  = from.full_address
  %span.subtle
    = from.precision
to
%span.rider{:id => "to"}
  = to.full_address
  %span.subtle
    = to.precision

.description
  = @rider.description
.rider_image
  - if @rider.image
    = image_tag @rider.image.public_filename(:small) 


.map#map_canvas{:width => 300, :height => 200}

%script{:type => "text/javascript"}
  = "initMap('from', 'to', #{from.ll} , #{to.ll}, #{mid.ll});"
